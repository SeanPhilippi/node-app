extends layouts/main-layout.pug

block styles
  link(rel="stylesheet", href="/css/product.css")

block content
  main
    if products.length > 0
      .grid
        each product in products
          article.card.product-item
            header.card__header
              h1.product__title #{product.title}
            div.card__image
              img(src="https://images.app.goo.gl/SttvFTTuQJWjLpcMA")
              p.product__description A very interesting book about so many even more
            .card__actions
              button.btn Add to Cart
    else
      h1 No Products

